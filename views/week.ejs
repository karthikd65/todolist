
<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= listName%> </h1>
    </div>

    <div class="box">
      <% for(var i=0; i<listItems.length; i++){%>
        <form  action="/delete" method="post">
          <div class="item">
            <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=listItems[i]._id%>">
            <p><%= listItems[i].name%></p>
          </div>
          <input type="hidden" name="listName" value="<%=listName%>"></input>
        </form>
      <%}%>
      <form class="" action="/" method="post">
        <input type="text" name="itemName" placeholder="Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listName %>">+</button>
      </form>
    </div>
<%- include("header") -%>
